doctype html
html
  head
    block head
      meta(charset="UTF-8")
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
      title Natours | #{title}
      link(rel='stylesheet' href='/css/style.css')
      link(rel='shortcut icon' href='/img/favicon.png' type='/image/png')
      link(href="https://fonts.googleapis.com/css?family=Lato:300,300i,700" rel="stylesheet")
      link(rel='stylesheet' href='https://api.mapbox.com/mapbox-gl-js/v3.12.0/mapbox-gl.css')


  body(data-alert=`${alert ? alert : ''}`)
    //HEADER
    include _header

    //CONTENT
    block content
      h1 this is placeholder heading

    //FOOTER
    include _footer

    script(src="https://js.stripe.com/v3/")
    script(src="/js/bundle.js")
    script.
      document.addEventListener('DOMContentLoaded', function () {
        setTimeout(function () {
          const header = document.querySelector('.header'); // change selector if needed
          if (header) {
            header.scrollIntoView({ behavior: 'auto', block: 'start' });
          }
        }, 0.1);
      });
